/* Newly installed font code */

@font-face {
  font-family: "Figtree";
  src: url({{"Figtree-VariableFont_wght.woff" | asset_url}}) format("woff"),url({{"Figtree-VariableFont_wght.woff2" | asset_url}}) format("woff2");
}
@font-face {
  font-family: "Figtree Italic";
  src: url({{"Figtree-Italic-VariableFont_wght.woff" | asset_url}}) format("woff"),url({{"Figtree-Italic-VariableFont_wght.woff2" | asset_url}}) format("woff2");
}

* {font-family: "Figtree" !important; }

