<section class="Section text-with-images-around" id="section-{{ section.id }}">
  <div class="Container history_container">
    <div class="history_text-w-image">
      <h2 class="history_title">{{ block.settings.title }}</h2>
      <p class="history_content">{{ block.settings.content }}</p>
      <img src="{{ block.settings.image | img_url: 'medium' }}" alt="">
    </div>
    <div class="history_image-only">
      <img src="{{ block.settings.side_image }}" alt="">
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Text w/ imgs custom",
    "max_blocks": 2,
    "blocks": [
      {
        "type": "richtext",
        "name": "Text w image underneath",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Text",
            "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1500 x 800px .jpg recommended"
          }
        ]
      },
      {
        "type": "image",
        "name": "Side Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "side_image",
            "label": "Side Image"
          }
        ]
      }
    ],
      "presets": [
        {
          "name": "Text w/ imgs custom",
          "blocks": [
            {
              "type": "richtext"
            },
            {
              "type": "image"
            }
          ]
        }
      ]
  }
{% endschema %}

