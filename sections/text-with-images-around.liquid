{% for block in section.blocks %}
  {% assign side_image = block.settings.side_image %}
{% endfor %}
{% for block in section.blocks %}
  {% if block.settings.title %}
    {% assign title = block.settings.title %}
  {% endif %}
  {% if block.settings.content %}
    {% assign content = block.settings.content %}
  {% endif %}
  {% if block.settings.image %}
    {% assign image = block.settings.image %}
  {% endif %}
{% endfor %}

<section class="Section text-with-images-around" id="section-{{ section.id }}">
  <div class="Container history_container">
    {% unless section.settings.flip %}
      <div class="history_left">
          <h2 class="about-us-titles">{{ title }}</h2>
          <div class="history_content">{{ content }}</div>
          <img src="{{ image | img_url: '608x270' }}" alt="">
      </div>
      <div class="history_right">
          <img src="{{ side_image | img_url: '608x864' }}" alt="">
      </div>
      {% else %}
      <div class="history_left">
          <img src="{{ side_image | img_url: '608x864' }}" alt="">
      </div>
      <div class="history_right">
          <h2 class="history_title">{{ title }}</h2>
          <div class="history_content">{{ content }}</div>
          <img src="{{ image | img_url: '608x270' }}" alt="">
      </div>
    {% endunless %}
  </div>
</section>


{% schema %}
  {
    "name": "Text w/ imgs custom",
    "max_blocks": 2,
    "settings": [
      {
        "type": "checkbox",
        "id": "flip",
        "label": "Flip Content",
        "info": "Flip positioin of text with image underneath and side image"
      }
    ],
    "blocks": [
      {
        "type": "richtext",
        "name": "Text w image underneath",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Text",
            "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1500 x 800px .jpg recommended"
          }
        ]
      },
      {
        "type": "image",
        "name": "Side Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "side_image",
            "label": "Side Image"
          }
        ]
      }
    ],
      "presets": [
        {
          "name": "Text w/ imgs custom",
          "blocks": [
            {
              "type": "richtext"
            },
            {
              "type": "image"
            }
          ]
        }
      ]
  }
{% endschema %}

